#
# Test for buffer overflow
#

use strict;
require Cwd;
require 'pltests.pl';

my $cwd = Cwd::cwd();
my $LOG = "$cwd/test-log";
my $NAMAZU = pltests::binpath('namazu');

my @cmd;

delete $ENV{'LANG'};
$ENV{'LANGUAGE'} = 'C';
$ENV{'LC_ALL'} = 'C';
delete $ENV{'LC_MESSAGE'};
delete $ENV{'LC_CTYPE'};
delete $ENV{'NAMAZURC'};

pltests::putline($LOG, "  *** starting $0");

my $INDEX = `perl -e \"print \\\"x\\\"x3000\"`;

@cmd = ("$NAMAZU", "nonexistant", "$INDEX");
pltests::putline($LOG, "  ", \@cmd);
my ($status, $result, $conts_err) = pltests::ezsyscmd(\@cmd);
unless (defined $result) {
    exit 1;
}
if ($result !~ /^No document match/m) {
    exit 1;
}

exit 0;

